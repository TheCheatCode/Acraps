<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tcc.acraps.GameActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/pointWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/point4Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".166"
            android:text="4"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/point5Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".166"
            android:text="5"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/point6Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".166"
            android:text="SIX"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/point8Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".166"
            android:text="8"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/point9Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".166"
            android:text="NINE"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/point10Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".166"
            android:text="10"
            android:textAlignment="center"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/comeBetsWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pointWrapper"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/comeBet4Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".066"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/comeOdds4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/comeBet5Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".066"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/comeOdds5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/comeBet6Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".066"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/comeOdds6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/comeBet8Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".066"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/comeOdds8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/comeBet9Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".066"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/comeOdds9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/comeBet10Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".066"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/comeOdds10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/comeWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comeBetsWrapper"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight=".5"
            android:text="COME: "
            android:textAlignment="textEnd"
            android:textColor="#922"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/comeBet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/passWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comeWrapper"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <Button
            android:id="@+id/menuButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:background="#444"
            android:onClick="onClickMenu"
            android:text="Menu" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight=".3"
            android:text="PASS: "
            android:textAlignment="textEnd"
            android:textColor="#FFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/passBet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/passOdds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <TextView
        android:id="@+id/outcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passWrapper"
        android:layout_centerHorizontal="true"
        android:textColor="@color/green"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rebetWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/diceWrapper1"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rebet"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#444"
            android:onClick="onClickRebet"
            android:text="Rebet" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/diceWrapper1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/diceWrapper2"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <Button
            android:id="@+id/d11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="#900"
            android:onClick="onClickD1"
            android:text="1"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/d12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="#900"
            android:onClick="onClickD1"
            android:text="2"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/d13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="#900"
            android:onClick="onClickD1"
            android:text="3"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/d1Text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.1"
            android:background="#900"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/roll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:onClick="onClickRoll"
            android:text="ROLL" />

        <TextView
            android:id="@+id/d2Text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="0.1"
            android:background="#900"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/d21"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="#900"
            android:onClick="onClickD2"
            android:text="1"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/d22"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="#900"
            android:onClick="onClickD2"
            android:text="2"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/d23"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="#900"
            android:onClick="onClickD2"
            android:text="3"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/diceWrapper2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <Button
            android:id="@+id/d14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="#900"
            android:onClick="onClickD1"
            android:text="4"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/d15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="#900"
            android:onClick="onClickD1"
            android:text="5"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/d16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="#900"
            android:onClick="onClickD1"
            android:text="6"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/balanceText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.4"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:text="2000"
            android:textAlignment="center"
            tools:text="2000" />

        <Button
            android:id="@+id/d24"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="#900"
            android:onClick="onClickD2"
            android:text="4"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/d25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="#900"
            android:onClick="onClickD2"
            android:text="5"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/d26"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="#900"
            android:onClick="onClickD2"
            android:text="6"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>
